<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_check_app_installed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="APP安装检测" />

        <EditText
            android:id="@+id/input_app_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入包名或者应用名称"
            android:textColor="@color/black" />
    </LinearLayout>


    <Button
        android:id="@+id/btn_start_app1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="指定Activity启动" />

    <Button
        android:id="@+id/btn_start_app2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="指定APP包名启动" />

    <Button
        android:id="@+id/btn_start_app3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="指定URL启动" />
</LinearLayout>