<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="itemShowVideoData"
            type="com.itsdf07.core.app.ui.fragment.video.ShortVideoViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <!--    短视频封面-->
        <ImageView
            android:id="@+id/bg_shortvideo_cover"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@mipmap/h_pic_1"
            android:scaleType="fitXY"
            app:layout_constraintDimensionRatio="h,2:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_shortvideo_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="这个是短视频标题" />

        <TextView
            android:id="@+id/text_shortvideo_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:layout_constraintLeft_toLeftOf="@id/text_shortvideo_title"
            app:layout_constraintTop_toBottomOf="@id/text_shortvideo_title"
            tools:text="这个是短视频简洁" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
