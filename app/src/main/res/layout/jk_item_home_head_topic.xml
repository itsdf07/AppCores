<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data></data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF">

        <ImageView
            android:id="@+id/iv_item_hot_avatar"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:scaleType="fitXY"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@mipmap/icon_logo" />

        <TextView
            android:id="@+id/tv_hot_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="3dp"
            android:textColor="#323232"
            android:textSize="14dp"
            app:layout_constraintStart_toEndOf="@+id/iv_item_hot_avatar"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="30天设计挑战" />

        <TextView
            android:id="@+id/tv_hot_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:textColor="#888888"
            android:textSize="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_item_hot_avatar"
            app:layout_constraintStart_toEndOf="@+id/iv_item_hot_avatar"
            tools:text="103w 浏览" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>